[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
indent_style = space
indent_size = 4

[*.php]
indent_style = space
indent_size = 4

[{*.twig, *.html.twig}]
indent_style = space
indent_size = 2

[{*.css, *.scss}]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[{*.yml, *yaml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.test]
indent_style = space
indent_size = 4

[*.rst]
indent_style = space
indent_size = 4
